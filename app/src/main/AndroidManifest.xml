<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samislibrary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logoimg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoimg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WebviewActivity"></activity>
        <activity android:name=".Favlist" />
        <activity android:name=".wishList" />
        <activity android:name=".CurrentReadingBooks" />
        <activity android:name=".AllreadyReadBooks" />
        <activity android:name=".MainBook" />
        <activity android:name=".SeeAllBooks" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>